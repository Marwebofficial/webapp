
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
        return request.auth.token.email == 'samuelmarvel21@gmail.com';
    }

    function userCanUpdate(userId) {
      // A user can update their own document if they are the owner,
      // AND the update request does not change their 'walletBalance'.
      // This is checked by comparing the balance before and after the update.
      return isOwner(userId) && request.resource.data.walletBalance == resource.data.walletBalance;
    }

    // ----------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      // An update is allowed if it's from the user and doesn't change the walletBalance,
      // OR if it's from an admin.
      allow update: if userCanUpdate(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if false;
        allow delete: if isAdmin();
    }

    match /dataPlans/{planId} {
        allow get: if true;
        allow list: if true;
        allow write: if isAdmin();
    }

    match /tvPlans/{planId} {
        allow get: if true;
        allow list: if true;
        allow write: if isAdmin();
    }

    match /networkStatus/{networkId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /announcement/current {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /blog/{postId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /funding/{requestId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read, list, update, delete: if isAdmin();
    }
  }
}
