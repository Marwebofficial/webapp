rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
        return request.auth.token.email == 'samuelmarvel21@gmail.com';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && request.resource.data.keys().hasAll(['pin', 'name', 'phoneNumber'])) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    match /fundingRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }

    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if false;
        allow delete: if isAdmin();
    }

    match /dataPlans/{networkId} {
      allow write: if isAdmin();
      match /{path=**} {
        allow read: if true;
      }
    }

    match /tvPlans/{planId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /networkStatus/{networkId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /announcement/current {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /announcements/{announcementId} {
        allow read, write: if isAdmin();
    }

    match /blog/{postId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /admin/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
