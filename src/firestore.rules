
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
        return request.auth.token.email == 'samuelmarvel21@gmail.com';
    }

    function isUpdatingOwnRequest(userId) {
      return isOwner(userId) && request.resource.data.keys().hasOnly(['pendingFundingRequest']);
    }

    // ----------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isUpdatingOwnRequest(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if false;
        allow delete: if isAdmin();
    }

    match /dataPlans/{planId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /tvPlans/{planId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /networkStatus/{networkId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /announcement/current {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /blog/{postId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /funding/{requestId} {
        allow read, list, write: if isAdmin();
    }

    match /admin/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
